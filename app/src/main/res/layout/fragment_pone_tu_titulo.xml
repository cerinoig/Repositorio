<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laboratorioiii.myapplication.PoneTuTitulo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/LinearIngresarTitulo"
        android:background="@android:color/background_light">
    <!-- TODO: Update blank fragment layout -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo de la receta"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_margin="50dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Ingrese el tÃ­tulo"
            android:textSize="40dp"
            android:layout_marginTop="30dp"
            android:id="@+id/ingreseTitulo"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Ingrese el autor"
            android:textSize="40dp"
            android:layout_marginTop="30dp"
            android:id="@+id/ingreseAutor"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Guardar y Continuar"
            android:layout_gravity="center"
            android:id="@+id/ContinuarTitulo" />

    </LinearLayout>

</FrameLayout>
