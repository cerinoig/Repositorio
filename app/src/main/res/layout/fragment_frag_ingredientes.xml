<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laboratorioiii.myapplication.Clases.FragIngredientes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/LinearIngresarIngredientes"/>
        <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/LinearingresarPasos">
        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredientes"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:textColor="@android:color/holo_purple"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Ingrediente 1"
            android:textSize="40dp"

            android:id="@+id/IngresoIngrediente1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Ingrediente 2"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/IngresoIngrediente2"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Ingrediente  3"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/IngresoIngrediente3"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Ingrediente  4"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/IngresoIngrediente4"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Ingrediente  5"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/IngresoIngrediente5"
            />


    </LinearLayout>


</FrameLayout>
